<Window x:Class="LE_BANQUIER_VF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LE_BANQUIER_VF"
        mc:Ignorable="d"
        Title="LE BANQUIER" WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" ResizeMode="CanMinimize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Black" Offset="0" />
            <GradientStop Color="#001F3F" Offset="0.5" />
            <!-- Navy Blue -->
            <GradientStop Color="#002855" Offset="1" />
            <!-- Darker Navy -->
        </LinearGradientBrush>
    </Window.Background>
    
    
    <!-- Main window that will hold all the views -->
    <Grid>
        <!-- CotentControl that will hold the different Views-->
        <ContentControl x:Name="ContentSpace" />
    </Grid>
</Window>
