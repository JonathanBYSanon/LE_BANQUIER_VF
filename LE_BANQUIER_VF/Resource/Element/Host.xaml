<UserControl x:Class="LE_BANQUIER_VF.Resource.Element.Host"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LE_BANQUIER_VF.Resource.Element"
             mc:Ignorable="d" ClipToBounds="True">

    <Border Background="#493971" Margin="0,20,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="ExclamationImage"
                   Source="pack://application:,,,/Resource/Image/NewMessage.png"
                   Width="100" Height="100"
                   Opacity="0"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Image.RenderTransform>
            </Image>
            
            <!-- TextBlock avec animation de pop -->
            <TextBlock Text="{Binding Message, NotifyOnTargetUpdated=True}" 
                       FontSize="18" 
                       FontWeight="ExtraBold"
                       Foreground="white" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="10" 
                       Grid.Column="1"
                       TextWrapping="Wrap"
                       TextAlignment="Center">

                <!-- Triggers pour détecter les changements -->
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Binding.TargetUpdated">
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- Animation de fade-in -->
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:2" />
                                <!-- Animation de fade-in pour l'image -->
                                <DoubleAnimation Storyboard.TargetName="ExclamationImage"
                                                 Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:1" />
                                <!-- Animation de mise à l'échelle (pop) -->
                                <DoubleAnimation Storyboard.TargetName="ExclamationImage"
                                                 Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 From="1" To="1.5" Duration="0:0:1" AutoReverse="True" />
                                <DoubleAnimation Storyboard.TargetName="ExclamationImage"
                                                 Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 From="1" To="1.5" Duration="0:0:1" AutoReverse="True" />
                                <!-- Animation de fade-out pour l'image -->
                                <DoubleAnimation Storyboard.TargetName="ExclamationImage"
                                                 Storyboard.TargetProperty="Opacity"
                                                 From="1" To="0" Duration="0:0:0.2" BeginTime="0:0:3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>

            <Image Source="pack://application:,,,/Resource/Image/host.png"
                   Grid.Column="2" HorizontalAlignment="Right"/>
            

        </Grid>
    </Border>
</UserControl>
