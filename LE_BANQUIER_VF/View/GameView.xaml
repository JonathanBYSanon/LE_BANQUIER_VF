<UserControl x:Class="LE_BANQUIER_VF.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LE_BANQUIER_VF.View"
             xmlns:vm="clr-namespace:LE_BANQUIER_VF.ViewModel"
             xmlns:Element="clr-namespace:LE_BANQUIER_VF.Resource.Element"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="1200">
    <UserControl.DataContext>
        <vm:GameViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="❌ Quitter" Command="{Binding leaveCommand}" Grid.Column="0"
                    Style="{StaticResource CancelButtonStyle}" Width="100" Height="50"/>
            
            <Element:GameProgress HorizontalAlignment="Stretch" Grid.Column="1"/>
            
            <Element:Briefcase DataContext="{Binding Player.Briefcase}" Margin="20" Grid.Column="2"/>
            
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left prizes -->
            <ItemsControl ItemsSource="{Binding LowPrizes}" Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="13" Columns="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Element:Prize PrizeElement="{Binding}" Width="150"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ListView pour afficher les mallettes -->
            <ListView Grid.Column="1" ItemsSource="{Binding Briefcases}" SelectedItem="{Binding SelectedBriefcase}" 
                      Background="Transparent" BorderBrush="Transparent">
                <ListView.ItemContainerStyle>
                    <StaticResource ResourceKey="ListViewBriefcase" />
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <!-- UniformGrid pour organiser les mallettes -->
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="5" Columns="6"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate >
                    <!-- BriefcaseControl utilisé pour chaque mallette -->
                    <DataTemplate >
                        <Element:Briefcase DataContext="{Binding}" MinWidth="150"
                                           Visibility="{Binding IsOpened, Converter={StaticResource BooleanToVisibilityInverseConverter}}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <!-- Left prizes -->
            <ItemsControl ItemsSource="{Binding HighPrizes}" Grid.Column="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="13" Columns="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Element:Prize PrizeElement="{Binding}" Width="150"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Element:Host Grid.Row="2" DataContext="{Binding Host}"/>

    </Grid>
</UserControl>
