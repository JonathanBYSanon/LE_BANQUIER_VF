<UserControl x:Class="LE_BANQUIER_VF.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LE_BANQUIER_VF.View"
             mc:Ignorable="d">
    
    <!-- View of the settings -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Title -->
            <RowDefinition Height="3*"/>
            <!-- Settings Form -->
            <RowDefinition Height="*"/>
            <!-- Save Button -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="⚙️ Paramètres"
                   FontSize="40"
                   Foreground="Gold"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"/>

        <!-- Settings Form -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Grid.Row="1">

            <!-- Player Name -->
            <TextBlock Text="Nom du joueur :" Foreground="White" FontSize="24"/>
            <TextBox Text="{Binding Settings.PlayerName}" 
                     FontSize="22" 
                     Foreground="Black" 
                     Background="White"
                     BorderBrush="Gold"
                     Padding="10"/>

            <!-- Max Amount -->
            <TextBlock Text="Montant maximum :" Foreground="White" FontSize="24"/>
            <TextBox Text="{Binding Settings.MaxAmount}" 
                     FontSize="22" 
                     Foreground="Black" 
                     Background="White"
                     BorderBrush="Gold"
                     Padding="10"/>

            <!-- Sound Toggle -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Son :" Foreground="White" FontSize="24" Margin="0,0,20,0"/>
                <ToggleButton x:Name="SoundToggle"
                              Content="🔊 Activer"
                              FontSize="20"
                              Width="150"
                              Foreground="Black"
                              Background="Gold"
                              Checked="SoundToggle_Checked"
                              Unchecked="SoundToggle_Unchecked"/>
            </StackPanel>
        </StackPanel>

        <!-- Save Button -->
        <Button Content="💾 Terminer"
                Width="250" Height="60"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="20"
                Style="{StaticResource ConfirmButtonStyle}"
                Grid.Row="2"
                Click="SaveSettings_Click"/>
    </Grid>
</UserControl>
