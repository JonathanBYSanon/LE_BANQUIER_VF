<Application x:Class="LE_BANQUIER_VF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LE_BANQUIER_VF"
             xmlns:conv="clr-namespace:LE_BANQUIER_VF.Service.converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
            <conv:BooleanToImageConverter x:Key="BriefcaseImageConverter"/>
            <conv:BooleanToTextConverter x:Key="BooleanToTextConverter"/>
            <!-- Styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/Style/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Resource/Style/ListViewStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
